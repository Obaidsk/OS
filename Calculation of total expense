 
#include <stdio.h>

int main() 
{
    int qty,dis;
    float rate,tot;
    
    printf("Enter the quantity  ");
    scanf ("%d",&qty);
    printf("Enter the rate");
    scanf ("%f",&rate);
     if (qty>1500){
     dis=10 ;
    } else {
     dis=0;
     }tot = (rate * qty)-(rate*qty*dis/100);
     printf("Total amoumt is Rs :%2f\n ",tot);
    

    return 0;
}
